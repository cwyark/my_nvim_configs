{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "disabled": false,
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "disabled": false,
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "disabled": false,
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "command": "npx",
      "disabled": false,
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "time": {
      "command": "uvx",
      "disabled": false,
      "args": [
        "mcp-server-time",
        "--local-timezone",
        "Asia/Taipei"
      ]
    },
    "docker": {
      "command": "uvx",
      "disabled": false,
      "args": [
        "docker-mcp"
      ]
    },
    "git": {
      "command": "uvx",
      "disabled": false,
      "args": [
        "mcp-server-git",
        "--repository",
        "${PWD}"
      ]
    },
    "fetch": {
      "command": "uvx",
      "disabled": false,
      "args": [
        "mcp-server-fetch"
      ]
    },
    "repomix": {
      "command": "npx",
      "args": [
        "-y",
        "repomix",
        "--mcp"
      ]
    }
  }
}
